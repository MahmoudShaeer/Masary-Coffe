<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageRight"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:textColor="#e9ffb923"
        android:textSize="19sp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textColor="#e9ffb923"
        android:textSize="19sp"
        android:layout_above="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textColor="#5b5b5b"
        android:textSize="15dp"
        android:layout_below="@+id/textView9"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginTop="16dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CupCakes"
        android:textColor="#000000"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Detalis2"
        android:layout_alignStart="@+id/Detalis2" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Lorem ipsum dolor sit amet,consectuer adipisicing elit "
        android:textColor="#5b5b5b"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/textView6" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="15dp"
        android:id="@+id/cost_L"
        android:textColor="#5b5b5b"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />
    <View
        android:layout_width="1dp"
        android:layout_marginRight="8dp"
        android:layout_height="50dp"
        android:background="#cc000000"
        android:layout_toLeftOf="@+id/cost_L"
        android:layout_alignBottom="@+id/textView6"
        android:id="@+id/view">
    </View>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/like"
        android:layout_below="@+id/cost_L"
        android:layout_toRightOf="@+id/cost_L"
        android:layout_toEndOf="@+id/cost_L" />
    <View
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_below="@+id/imageRight"
        android:background="@drawable/shape_shadow"
        android:id="@+id/view2">
    </View>



    <ImageView
        android:layout_width="100dp"

        android:layout_height="100dp"
        android:id="@+id/imageLeft"
        android:layout_below="@+id/view2"
        android:layout_toRightOf="@+id/Detalis2"
        android:layout_toEndOf="@+id/Detalis2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CupCakes"
        android:textColor="#000000"
        android:id="@+id/Cupcakestxt"
        android:layout_below="@+id/view2"
        android:layout_toRightOf="@+id/imageRight"
        android:layout_toEndOf="@+id/imageRight" />


    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Lorem ipsum dolor sit amet,consectuer adipisicing elit "
        android:textColor="#5b5b5b"
        android:id="@+id/Detalis2"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/view_2below"
        android:layout_alignLeft="@+id/Cupcakestxt"
        android:layout_marginLeft="5dp"

        android:layout_alignStart="@+id/Cupcakestxt" />

    <TextView
        android:id="@+id/mediam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textColor="#e9ffb923"
        android:textSize="19sp"
        android:layout_below="@+id/Cupcakestxt"
        android:layout_alignRight="@+id/mediam2price"
        android:layout_alignEnd="@+id/mediam2price">
    </TextView>
    <TextView
        android:id="@+id/larg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:textColor="#e9ffb923"
        android:textSize="19sp"
        android:layout_alignBaseline="@+id/mediam2"
        android:layout_alignBottom="@+id/mediam2"
        android:layout_alignLeft="@+id/cost_L2"
        android:layout_alignStart="@+id/cost_L2" />

    <TextView
        android:id="@+id/mediam2price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textColor="#5b5b5b"
        android:textSize="15dp"
        android:layout_below="@+id/larg2"
        android:layout_toRightOf="@+id/like2"
        android:layout_toEndOf="@+id/like2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="15dp"
        android:id="@+id/cost_L2"
        android:textColor="#5b5b5b"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/larg2"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />

    <View
        android:layout_width="1dp"
        android:layout_marginRight="10dp"
        android:layout_height="50dp"
        android:background="#cc000000"
        android:layout_toLeftOf="@+id/cost_L2"
        android:layout_alignBottom="@+id/like2"
        android:id="@+id/view2_pop">
    </View>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/like2"
        android:layout_below="@+id/mediam2price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_below="@+id/imageLeft"
        android:background="@drawable/shape_shadow"
        android:id="@+id/view_2below">
    </View>

</RelativeLayout>