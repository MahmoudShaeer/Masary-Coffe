        android:layout_alignStart="@+id/JuiceCupcakestxt" />

    <TextView
        android:id="@+id/Juicemediam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textColor="#e9ffb923"
        android:textSize="19sp"
        android:layout_below="@+id/JuiceCupcakestxt"
        android:layout_alignRight="@+id/Juicemediam2price"
        android:layout_alignEnd="@+id/Juicemediam2price">
    </TextView>
    <TextView
        android:id="@+id/Juicelarg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:textColor="#e9ffb923"
        android:textSize="19sp"
        android:layout_alignBaseline="@+id/Juicemediam2"
        android:layout_alignBottom="@+id/Juicemediam2"
        android:layout_alignLeft="@+id/Juicecost_L2"
        android:layout_alignStart="@+id/Juicecost_L2" />

    <TextView
        android:id="@+id/Juicemediam2price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textColor="#5b5b5b"
        android:textSize="15dp"
        android:layout_below="@+id/Juicelarg2"
        android:layout_toRightOf="@+id/Juicelike2"
        android:layout_toEndOf="@+id/Juicelike2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="15dp"
        android:id="@+id/Juicecost_L2"
        android:textColor="#5b5b5b"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/Juicelarg2"
        android:layout_toLeftOf="@+id/JuicetextView5"
        android:layout_toStartOf="@+id/JuicetextView5" />

    <View
        android:layout_width="1dp"
        android:layout_marginRight="10dp"
        android:layout_height="50dp"
        android:background="#cc000000"
        android:layout_toLeftOf="@+id/Juicecost_L2"
        android:layout_alignBottom="@+id/Juicelike2"
        android:id="@+id/Juiceview2_pop">
    </View>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/Juicelike2"
        android:layout_below="@+id/Juicemediam2price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_below="@+id/JuiceimageLeft"
        android:background="@drawable/shape_shadow"
        android:id="@+id/Juiceview_2below">
    </View>

</RelativeLayout>