        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Lorem ipsum dolor sit amet,consectuer adipisicing elit "
        android:textColor="#5b5b5b"
        android:id="@+id/JuiceDetalis2"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/Juiceview_2below"
        android:layout_alignLeft="@+id/JuiceCupcakestxt"
